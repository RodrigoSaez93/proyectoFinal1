<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container mt-3"
        <div class="col">
          <h1>Registro de Usuario</h1>
          <form action="" method="post">
            <div class="mb-3">
              <label for="txtNombre" class="form-label">Email</label>
              <input id="txtNombre" name="username" type="text" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="txtPassword" class="form-label">Password</label>
              <input id="txtPassword" name="password" type="password" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="txtName" class="form-label">Nombre</label>
              <input id="txtName" name="name" type="text" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="txtAddress" class="form-label">Dirección</label>
              <input id="txtAddress" name="address" type="text" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="txtAge" class="form-label">Edad</label>
              <input id="txtAge" name="age" type="text" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="txtPhoneNumber" class="form-label">Número de telefono</label>
              <input id="txtPhoneNumber" name="phoneNumber" type="text" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="txtPicture" class="form-label">Foto de perfil</label>
              <input id="txtPicture" name="picture" type="file" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>

        </div>
      </div>
    </div>
  </body>
</html>